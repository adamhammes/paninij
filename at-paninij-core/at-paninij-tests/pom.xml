<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.paninij</groupId>
    <artifactId>at-paninij-core</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>

  <artifactId>at-paninij-tests</artifactId>
  <packaging>jar</packaging>

  <name>@PaniniJ Tests</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <generated.sources.directory>
      ${project.build.directory}/generated-sources
    </generated.sources.directory>
    <generated.test.sources.directory>
      ${project.build.directory}/generated-test-sources
    </generated.test.sources.directory>
    <maven.generated.resources.directory>
      ${project.build.directory}/generated-resources/maven
    </maven.generated.resources.directory>
    <maven.generated.class.path.file>
      ${maven.generated.resources.directory}/panini_processor_classpath.txt
    </maven.generated.class.path.file>
    <project.logsDirectory>
      ${project.basedir}/logs
    </project.logsDirectory>
  </properties>


  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>build-classpath</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>build-classpath</goal>
            </goals>
            <configuration>
              <outputFile>${maven.generated.class.path.file}</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <generatedSourcesDirectory>${generated.sources.directory}</generatedSourcesDirectory>
          <generatedTestSourcesDirectory>${generated.test.sources.directory}</generatedTestSourcesDirectory>
          <compilerArgs>
            <!-- Dynamic ownership transfer methods: -->
            <arg>-Apanini.ownershipTransfer.dynamic=NONE</arg>
            <!--<arg>-Apanini.ownershipTransfer.dynamic=REFLECTION_NAIVE</arg>-->
            <!--<arg>-Apanini.ownershipTransfer.dynamic=REFLECTION_OPTIMIZED</arg>-->
            <!--<arg>-Apanini.ownershipTransfer.dynamic=NATIVE</arg>-->

            <!-- Static ownership transfer methods: -->
            <!--<arg>-Apanini.ownershipTransfer.static=NONE</arg>-->
            <arg>-Apanini.ownershipTransfer.static=SOTER</arg>

            <!-- Panini compilation settings: -->
            <arg>-Apanini.classPathFile=${maven.generated.class.path.file}</arg>
            <arg>-Apanini.classPath=${project.build.testOutputDirectory}</arg>
            <arg>-Apanini.sourcePath=${project.build.sourceDirectory}:${project.build.testSourceDirectory}:${generated.sources.directory}:${generated.test.sources.directory}</arg>
            <arg>-Apanini.classOutput=${project.build.testOutputDirectory}</arg>
            <arg>-Apanini.sourceOutput=${generated.test.sources.directory}</arg>

            <!-- SOTER analysis settings -->
            <arg>-Apanini.soter.analysisReports=${project.logsDirectory}/soter/analysis-reports</arg>
            <arg>-Apanini.soter.callGraphPDFs=${project.logsDirectory}/soter/call-graphs</arg>
            <arg>-Apanini.soter.heapGraphPDFs=${project.logsDirectory}/soter/heap-graphs</arg>
          </compilerArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.paninij</groupId>
      <artifactId>at-paninij-code-gen</artifactId>
    </dependency>
    <dependency>
      <groupId>org.paninij</groupId>
      <artifactId>at-paninij-runtime</artifactId>
    </dependency>
    <dependency>
      <groupId>org.paninij</groupId>
      <artifactId>at-paninij-soter</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
